{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Wrangle",
  "patterns": [
    {
      "include": "#transform"
    },
    {
      "include": "#comment"
    }
  ],
  "repository": {
    "transform": {
      "name": "keyword",
      "begin": "^([\\w]+)",
      "end": "$",
      "patterns": [
        {
          "include": "#param-type"
        },
        {
          "include": "#param"
        }
      ]
    },
    "param": {
      "name": "variable.parameter",
      "begin": "([\\w]+):",
      "end": "(?=([\\w]+):|$)",
      "patterns": [
        {
          "include": "#formula"
        },
        {
          "include": "#number"
        },
        {
          "include": "#string"
        }
      ]
    },
    "param-type": {
      "name": "variable.parameter",
      "begin": "([type]+):",
      "end": "(?=([\\w]+):|$)",
      "contentName": "support.type",
      "patterns": [
        {
          "name": "entity.name.type",
          "match": "(String|Integer|Float|Bool|SSN|Phone|Emailaddress|Creditcard|Gender|Map|Array|Ipaddress|Url|Httpcodes|Zipcode|State|Datetime)"
        }
      ]
    },
    "formula": {
      "name": "entity.name.function",
      "begin": "([\\w]+)\\(",
      "end": "\\)",
      "patterns": [
        {
          "include": "#formula"
        },
        {
          "include": "#number"
        },
        {
          "include": "#string"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "include": "#string-single-quoted"
        },
        {
          "include": "#string-double-quoted"
        },
        {
          "include": "#string-unquoted"
        }
      ]
    },
    "string-single-quoted": {
      "name": "string.quoted.single",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-escaped-character"
        }
      ]
    },
    "string-double-quoted": {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-escaped-character"
        }
      ]
    },
    "string-escaped-character": {
      "name": "constant.character.escape",
      "match": "\\\\."
    },
    "string-unquoted": {
      "name": "string.unquoted",
      "match": "\\w"
    },
    "number": {
      "name": "constant.numeric",
      "match": "\\b\\d+\\b"
    },
    "comment": {
      "name": "comment.line",
      "begin": "/{2}",
      "end": "$"
    }
  },
  "scopeName": "source.wrangle"
}